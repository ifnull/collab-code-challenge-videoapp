<h1><%= @playlist.name %></h1>
<ul class="list-group mb-3">
  <% @playlist.videos.each do |video| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= video.title %>
      <%= link_to 'Remove', remove_video_playlist_path(@playlist, video_id: video.id), method: :delete, class: 'btn btn-danger btn-sm' %>
    </li>
  <% end %>
</ul>

<h2>Add Videos</h2>
<%= render 'videos/index', videos: @videos %>
